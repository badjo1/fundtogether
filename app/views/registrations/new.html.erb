  <%= render layout: 'shared/public_layout' do %>

  <div class="w-full max-w-md">
      <!-- Logo/Header -->
      <div class="text-center mb-8">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-white rounded-full mb-4">
          <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
        </div>
        <h1 class="text-3xl font-bold text-white mb-2">Account Aanmaken</h1>
        <p class="text-blue-200">Start met groepsfinanciÃ«n beheren</p>
      </div>

      <!-- Register Card -->
      <div class="bg-white rounded-2xl shadow-2xl p-8">
        <% if @user&.errors&.any? %>
          <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded-lg">
            <h3 class="text-red-800 font-medium text-sm mb-2">Er zijn <%= pluralize(@user.errors.count, "fout", "fouten") %>:</h3>
            <ul class="list-disc list-inside text-red-700 text-sm space-y-1">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= form_with model: @user, url: register_path, method: :post, local: true, class: "space-y-6" do |f| %>
          <!-- Name Field -->
          <div>
            <label for="user_name" class="block text-sm font-medium text-gray-700 mb-2">
              Naam
            </label>
            <%= f.text_field :name, 
                required: true,
                autofocus: true,
                placeholder: "Je volledige naam",
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition" %>
          </div>

          <!-- Email Field -->
          <div>
            <label for="user_email" class="block text-sm font-medium text-gray-700 mb-2">
              Email
            </label>
            <%= f.email_field :email, 
                required: true,
                autocomplete: "email",
                placeholder: "jouw@email.com",
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition" %>
          </div>

          <!-- Password Field -->
          <div>
            <label for="user_password" class="block text-sm font-medium text-gray-700 mb-2">
              Wachtwoord
            </label>
            <%= f.password_field :password, 
                required: true,
                autocomplete: "new-password",
                placeholder: "Minimaal 8 karakters",
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition" %>
            <p class="text-xs text-gray-500 mt-1">Minimaal 8 karakters</p>
          </div>

          <!-- Password Confirmation Field -->
          <div>
            <label for="user_password_confirmation" class="block text-sm font-medium text-gray-700 mb-2">
              Bevestig Wachtwoord
            </label>
            <%= f.password_field :password_confirmation, 
                required: true,
                autocomplete: "new-password",
                placeholder: "Herhaal je wachtwoord",
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition" %>
          </div>

          <!-- Submit Button -->
          <button 
            type="submit"
            class="w-full bg-blue-600 text-white py-3 px-4 rounded-lg font-medium hover:bg-blue-700 transition-colors focus:ring-4 focus:ring-blue-300"
          >
            Account Aanmaken
          </button>
        <% end %>

        <!-- Divider -->
        <div class="relative my-6">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-white text-gray-500">Of</span>
          </div>
        </div>

        <!-- Login Link -->
        <div class="text-center">
          <p class="text-gray-600 text-sm">
            Al een account?
            <%= link_to "Login hier", login_path, class: "text-blue-600 hover:text-blue-700 font-medium" %>
          </p>
        </div>
      </div>

      <!-- Additional Info -->
      <div class="mt-6 text-center text-blue-100 text-sm">
        <p>Door te registreren ga je akkoord met onze voorwaarden</p>
      </div>
    </div>

<% end %> 