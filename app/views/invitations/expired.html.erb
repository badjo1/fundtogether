<!-- app/views/invitations/expired.html.erb -->
<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 flex items-center justify-center p-4">
  <div class="max-w-md w-full bg-white rounded-2xl shadow-xl p-8 text-center">
    <!-- Icon -->
    <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
      <%= icon :x_circle, class: "w-8 h-8 text-red-600" %>
    </div>

    <!-- Message -->
    <h1 class="text-2xl font-bold text-gray-900 mb-2">Uitnodiging Verlopen</h1>
    <p class="text-gray-600 mb-6">
      Deze uitnodiging is meer dan 24 uur geleden verstuurd en is niet meer geldig.
    </p>

    <!-- Info Box -->
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6">
      <div class="flex gap-2 text-left">
        <%= icon :warning, class: "w-5 h-5 text-yellow-600 flex-shrink-0 mt-0.5" %>
        <div class="text-sm text-yellow-800">
          <p class="font-medium">Waarom is deze uitnodiging verlopen?</p>
          <p class="text-yellow-700 mt-1">Uitnodigingen zijn slechts 24 uur geldig voor jouw veiligheid.</p>
        </div>
      </div>
    </div>

    <!-- Action -->
    <p class="text-sm text-gray-600 mb-4">
      Vraag de beheerder om een nieuwe uitnodiging te versturen.
    </p>

    <%= link_to root_path, class: "inline-block px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-medium transition-colors" do %>
      Ga naar Home
    <% end %>
  </div>
</div>
