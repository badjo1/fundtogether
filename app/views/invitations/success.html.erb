<!-- app/views/invitations/success.html.erb -->
<%= render layout: 'shared/app_layout' do %>
  <div class="max-w-2xl mx-auto" data-controller="clipboard">
    <div class="bg-white rounded-lg shadow-xl">
      <!-- Header -->
      <div class="flex items-center gap-3 p-6 border-b border-gray-200">
        <div class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center">
          <%= icon :check_circle, class: "w-6 h-6 text-green-600" %>
        </div>
        <h1 class="text-2xl font-bold text-gray-900">Uitnodiging Aangemaakt!</h1>
      </div>

      <!-- Body -->
      <div class="p-6 space-y-6">
        <!-- Email sent confirmation -->
        <% if @invitation.email.present? %>
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
            <div class="flex gap-3">
              <%= icon :mail, class: "w-5 h-5 text-blue-600 flex-shrink-0" %>
              <div class="text-sm text-blue-800">
                <p class="font-medium">Uitnodiging verstuurd naar:</p>
                <p class="text-blue-900 font-mono"><%= @invitation.email %></p>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Invitation Link -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Uitnodigingslink
          </label>
          <div class="flex gap-2">
            <input
              type="text"
              value="<%= @invitation_url %>"
              readonly
              data-clipboard-target="source"
              class="flex-1 px-4 py-2 border border-gray-300 rounded-lg bg-gray-50 text-gray-700 font-mono text-sm"
            >
            <button
              type="button"
              data-action="clipboard#copy"
              class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-medium flex items-center gap-2"
            >
              <%= icon :document, class: "w-5 h-5" %>
              <span>KopiÃ«ren</span>
            </button>
          </div>
          <p class="mt-2 text-sm text-gray-500">
            Deze link is geldig tot <%= @invitation.expires_at.strftime('%d %b %Y om %H:%M') %>
          </p>
        </div>

        <!-- QR Code -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">
            QR Code
          </label>
          <div class="bg-white border-2 border-gray-200 rounded-lg p-4 inline-block">
            <%= render partial: "invitations/qr_code", locals: { url: @invitation_url } %>
          </div>
          <p class="mt-2 text-sm text-gray-500">
            Scan deze code om de uitnodiging te accepteren
          </p>
        </div>

        <!-- Share Options -->
        <div class="bg-gray-50 rounded-lg p-4">
          <p class="text-sm font-medium text-gray-700 mb-3">Delen via:</p>
          <div class="grid grid-cols-2 gap-2 mb-3">
            <!-- WhatsApp -->
            <a
              href="https://api.whatsapp.com/send?text=<%= CGI.escape(@whatsapp_text) %>"
              target="_blank"
              rel="noopener noreferrer"
              class="px-4 py-3 bg-green-500 text-white rounded-lg hover:bg-green-600 font-medium text-center flex items-center justify-center gap-2"
            >
              <%= icon :brand_whatsapp, class: "w-5 h-5" %>
              <span>WhatsApp</span>
            </a>

            <!-- Copy Link -->
            <button
              type="button"
              onclick="navigator.clipboard.writeText('<%= @invitation_url %>'); this.textContent = 'Gekopieerd!'; setTimeout(() => this.textContent = 'Kopieer Link', 2000)"
              class="px-4 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-medium flex items-center justify-center gap-2"
            >
              <span>Kopieer Link</span>
            </button>
          </div>

          <!-- Email Direct -->
          <%= form_with url: send_email_invitation_path(@invitation.token),
                        method: :post, class: "space-y-2" do |f| %>
            <div class="flex gap-2">
              <%= f.email_field :email,
                  placeholder: "email@voorbeeld.nl",
                  class: "flex-1 px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
              <%= f.submit "Verstuur Email",
                  class: "px-4 py-2 bg-gray-700 text-white rounded-lg hover:bg-gray-800 font-medium text-sm" %>
            </div>
          <% end %>
        </div>

        <!-- Expiry Warning -->
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
          <div class="flex gap-3">
            <%= icon :warning, class: "w-5 h-5 text-yellow-600 flex-shrink-0" %>
            <div class="text-sm text-yellow-800">
              <p class="font-medium">Let op: De uitnodiging verloopt automatisch na 24 uur</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Footer -->
      <div class="px-6 pb-6">
        <%= link_to users_path, class: "w-full block text-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-medium" do %>
          Terug naar Groepsleden
        <% end %>
      </div>
    </div>
  </div>
<% end %>
