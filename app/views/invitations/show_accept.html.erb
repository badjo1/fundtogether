<%= render layout: "shared/app_layout" do %>
  <div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-xl p-8 shadow-sm border border-gray-100">
      <!-- Header -->
      <div class="text-center mb-8">
        <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <%= icon :users, class: "w-8 h-8 text-blue-600" %>
        </div>
        <h1 class="text-2xl font-bold text-gray-900 mb-2">
          Uitnodiging voor <%= @invitation.account.name %>
        </h1>
        <p class="text-gray-600">
          Je bent uitgenodigd door <%= @invitation.invited_by.name %>
        </p>
      </div>

      <!-- STATE 1: Email Not Known - Show Email Form -->
      <% if @invitation.email.blank? %>
        <div class="mb-6">
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
            <p class="text-sm text-blue-800">
              <%= icon :info, class: "w-4 h-4 inline mr-2" %>
              Vul je email adres in om de uitnodiging te bevestigen.
            </p>
          </div>

          <%= form_with url: invitation_request_verification_path(@invitation.token),
                        method: :post, local: true, class: "space-y-4" do |f| %>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Email adres
              </label>
              <%= f.email_field :email,
                  required: true,
                  autofocus: true,
                  placeholder: "jouw@email.com",
                  class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
            </div>

            <div class="flex gap-3">
              <%= f.submit "Email Bevestigen",
                  class: "flex-1 bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 font-medium transition-colors" %>
              <%= button_to "Weigeren",
                  invitation_reject_path(@invitation.token),
                  method: :post,
                  class: "px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 font-medium transition-colors" %>
            </div>
          <% end %>
        </div>

      <!-- STATE 2: Email Known But Not Verified - Show Check Email Message -->
      <% elsif !@invitation.email_verified? %>
        <div class="text-center">
          <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6 mb-6">
            <%= icon :mail, class: "w-12 h-12 text-yellow-600 mx-auto mb-4" %>
            <h3 class="font-bold text-gray-900 mb-2">Controleer je email</h3>
            <p class="text-sm text-gray-700 mb-4">
              We hebben een verificatie email gestuurd naar:<br>
              <span class="font-medium"><%= @invitation.email %></span>
            </p>
            <p class="text-xs text-gray-600">
              Klik op de link in de email om je uitnodiging te bevestigen.
            </p>
          </div>

          <!-- Option to change email -->
          <details class="text-left">
            <summary class="text-sm text-blue-600 hover:text-blue-700 cursor-pointer mb-4">
              Verkeerd email adres?
            </summary>
            <%= form_with url: invitation_request_verification_path(@invitation.token),
                          method: :post, local: true, class: "space-y-4 mt-4" do |f| %>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                  Nieuw email adres
                </label>
                <%= f.email_field :email,
                    required: true,
                    value: @invitation.email,
                    class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
              </div>
              <%= f.submit "Verstuur opnieuw",
                  class: "w-full bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 font-medium transition-colors" %>
            <% end %>
          </details>
        </div>

      <!-- STATE 3: Email Verified - Show Accept/Reject Buttons -->
      <% else %>
        <div class="space-y-6">
          <!-- Account Info -->
          <div class="bg-gray-50 rounded-lg p-4">
            <dl class="space-y-2">
              <div class="flex justify-between">
                <dt class="text-sm text-gray-600">Account:</dt>
                <dd class="text-sm font-medium text-gray-900"><%= @invitation.account.name %></dd>
              </div>
              <div class="flex justify-between">
                <dt class="text-sm text-gray-600">Je email:</dt>
                <dd class="text-sm font-medium text-gray-900"><%= @invitation.email %></dd>
              </div>
              <div class="flex justify-between">
                <dt class="text-sm text-gray-600">Verloopt over:</dt>
                <dd class="text-sm font-medium text-gray-900">
                  <%= distance_of_time_in_words(@invitation.time_remaining) %>
                </dd>
              </div>
            </dl>
          </div>

          <!-- Accept/Reject Buttons -->
          <div class="flex gap-3">
            <%= button_to "Accepteer Uitnodiging",
                process_invitation_path(@invitation.token),
                method: :post,
                class: "flex-1 bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 font-medium transition-colors" %>
            <%= button_to "Weigeren",
                reject_invitation_path(@invitation.token),
                method: :post,
                class: "px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 font-medium transition-colors",
                data: { turbo_confirm: "Weet je zeker dat je deze uitnodiging wilt weigeren?" } %>
          </div>
        </div>
      <% end %>

      <!-- Time Remaining Warning -->
      <% if @invitation.time_remaining < 3600 %>
        <div class="mt-6 bg-yellow-50 border border-yellow-200 rounded-lg p-4">
          <p class="text-sm text-yellow-800">
            <%= icon :warning, class: "w-4 h-4 inline mr-2" %>
            Let op: Deze uitnodiging verloopt binnenkort!
          </p>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
