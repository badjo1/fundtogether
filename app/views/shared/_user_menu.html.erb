<!-- app/views/shared/_user_menu.html.erb -->

<div class="relative" data-controller="dropdown">
  <!-- User Menu Button -->
  <button 
    data-action="click->dropdown#toggle" 
    class="flex items-center space-x-3 hover:bg-gray-50 rounded-lg p-2 transition-colors"
  >
    <div class="text-right hidden sm:block">
      <p class="text-sm font-medium text-gray-900">
        <%= Current.user&.name || 'Gebruiker' %>
      </p>
      <p class="text-xs text-gray-500">
        <% if current_account %>
          €<%= sprintf('%.2f', current_account.user_balance(Current.user)) %>
        <% else %>
          Geen account
        <% end %>
      </p>
    </div>
    <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center flex-shrink-0">
      <span class="text-white font-bold text-sm">
        <%= Current.user&.name&.first&.upcase || 'U' %>
      </span>
    </div>
    <%= icon :chevron_down, class: "w-4 h-4 text-gray-400" %>
  </button>

  <!-- Dropdown Menu -->
  <div 
    data-dropdown-target="menu" 
    class="hidden absolute right-0 mt-2 w-80 bg-white rounded-xl shadow-xl border border-gray-200 z-50"
  >
    <!-- User Info Header -->
    <div class="p-4 border-b border-gray-100">
      <div class="flex items-center gap-3">
        <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center flex-shrink-0">
          <span class="text-white font-bold text-lg">
            <%= Current.user&.name&.first&.upcase || 'U' %>
          </span>
        </div>
        <div class="flex-1 min-w-0">
          <p class="font-semibold text-gray-900 truncate">
            <%= Current.user&.name || 'Gebruiker' %>
          </p>
          <p class="text-sm text-gray-500 truncate" data-dapp-target="walletAddress">
            <%= Current.user&.short_address || 'Niet verbonden' %>
          </p>
        </div>
      </div>
    </div>

    <!-- Current Account Section -->
    <% if current_account %>
      <div class="p-3 border-b border-gray-100 bg-blue-50">
        <p class="text-xs font-semibold text-gray-600 uppercase mb-2">Huidige Account</p>
        <div class="flex items-center gap-3 p-2 bg-white rounded-lg">
          <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center flex-shrink-0">
            <span class="text-white font-bold text-sm">
              <%= current_account.name.first.upcase %>
            </span>
          </div>
          <div class="flex-1 min-w-0">
            <p class="font-medium text-gray-900 text-sm truncate">
              <%= current_account.name %>
            </p>
            <p class="text-xs text-gray-500">
              <%= current_account.active_users.count %> leden • 
              €<%= sprintf('%.2f', current_account.user_balance(current_user)) %>
            </p>
          </div>
          <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
          </svg>
        </div>
      </div>
    <% end %>

    <!-- Switch Account Section -->
    <div class="p-3 border-b border-gray-100">
      <p class="text-xs font-semibold text-gray-600 uppercase mb-2 px-2">
        Wissel van Account
      </p>
      <div class="max-h-48 overflow-y-auto space-y-1">
        <% if Current.user %>
          <% Current.user.accounts.each do |account| %>
            <% next if account == current_account %>
            <%= link_to switch_account_path(account), method: :post, 
                class: "flex items-center gap-3 px-2 py-2 rounded-lg hover:bg-gray-50 transition-colors group" do %>
              <div class="w-9 h-9 bg-gradient-to-br from-blue-400 to-purple-500 rounded-lg flex items-center justify-center flex-shrink-0">
                <span class="text-white font-bold text-xs">
                  <%= account.name.first.upcase %>
                </span>
              </div>
              <div class="flex-1 min-w-0">
                <p class="font-medium text-gray-900 text-sm truncate group-hover:text-blue-600">
                  <%= account.name %>
                </p>
                <p class="text-xs text-gray-500">
                  <%= account.active_users.count %> leden • 
                  €<%= sprintf('%.2f', account.user_balance(current_user)) %>
                </p>
              </div>
              <svg class="w-4 h-4 text-gray-400 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            <% end %>
          <% end %>
        <% end %>
      </div>
      
      <%= link_to new_account_path, class: "flex items-center gap-2 px-2 py-2 mt-2 rounded-lg hover:bg-blue-50 transition-colors text-blue-600 group" do %>
        <div class="w-9 h-9 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0 group-hover:bg-blue-200 transition-colors">
          <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
        </div>
        <span class="font-medium text-sm">Nieuwe Account</span>
      <% end %>
    </div>

    <!-- User Actions -->
    <div class="p-2">
      <%= link_to '#', class: "flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-gray-50 transition-colors text-gray-700" do %>
        <%= icon :user, class: "w-5 h-5 text-gray-400" %>
        <span class="text-sm font-medium">Mijn Profiel</span>
      <% end %>

      <%= link_to settings_path, class: "flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-gray-50 transition-colors text-gray-700" do %>
        <%= icon :settings, class: "w-5 h-5 text-gray-400" %>
        <span class="text-sm font-medium">Instellingen</span>
      <% end %>

      <div class="border-t border-gray-100 my-2"></div>

      <%= button_to logout_path, method: :delete, class: "flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-red-50 transition-colors text-red-600 w-full" do %>
        <%= icon :logout, class: "w-5 h-5" %>
        <span class="text-sm font-medium">Uitloggen</span>
      <% end %>
    </div>
  </div>
</div>