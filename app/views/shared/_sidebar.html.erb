<!-- app/views/shared/_sidebar.html.erb -->

<!-- Sidebar -->
<aside class="fixed inset-y-0 left-0 z-50 w-64 bg-gray-900 transform -translate-x-full lg:translate-x-0 transition-transform duration-300 ease-in-out" data-dapp-target="sidebar">
  <!-- Sidebar Header -->
  <div class="flex items-center justify-between h-16 px-4 bg-gray-800">
    <div class="flex items-center space-x-2">
      <%= icon :users, class: "w-8 h-8 text-blue-400" %>
      <h1 class="text-lg font-bold text-white">Fund Together</h1>
    </div>
    <button data-action="click->dapp#toggleSidebar" class="lg:hidden text-gray-400 hover:text-white">
      <%= icon :x, class: "w-5 h-5" %>
    </button>
  </div>
  
  <!-- Account Switcher -->
  <%= render 'shared/account_switcher' %>
  
  <!-- Navigation -->
  <nav class="mt-8 px-4 space-y-2">
    <%= link_to dashboard_path, class: "flex items-center space-x-3 w-full px-4 py-3 rounded-lg text-left transition-all duration-200 #{current_page?(dashboard_path) ? 'bg-blue-600 text-white shadow-lg' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}" do %>
      <%= icon :chart, class: "w-5 h-5" %>
      <span class="font-medium">Dashboard</span>
    <% end %>

    <%= link_to transactions_path, class: "flex items-center space-x-3 w-full px-4 py-3 rounded-lg text-left transition-all duration-200 #{current_page?(transactions_path) ? 'bg-blue-600 text-white shadow-lg' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}" do %>
      <%= icon :document, class: "w-5 h-5" %>
      <span class="font-medium">Transacties</span>
    <% end %>

    <%= link_to users_path, class: "flex items-center space-x-3 w-full px-4 py-3 rounded-lg text-left transition-all duration-200 #{current_page?(users_path) ? 'bg-blue-600 text-white shadow-lg' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}" do %>
      <%= icon :users, class: "w-5 h-5" %>
      <span class="font-medium">Groepsleden</span>
    <% end %>

    <%= link_to settings_path, class: "flex items-center space-x-3 w-full px-4 py-3 rounded-lg text-left transition-all duration-200 #{current_page?(settings_path) ? 'bg-blue-600 text-white shadow-lg' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}" do %>
      <%= icon :settings, class: "w-5 h-5" %>
      <span class="font-medium">Instellingen</span>
    <% end %>
  </nav>

  <!-- Sidebar Footer -->
 <!-- Sidebar Footer - Optional branding/info -->
  <div class="absolute bottom-4 left-4 right-4">
    <div class="text-center text-gray-500 text-xs">
      <p>Powered by Blockchain</p>
      <p class="mt-1">v0.1.0</p>
    </div>
  </div>
</aside>