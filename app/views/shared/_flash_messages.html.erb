<!-- app/views/shared/_flash_messages.html.erb -->

<% if flash[:notice] %>
  <div class="mb-4 p-4 bg-green-50 border border-green-200 rounded-lg flex items-center gap-3" data-controller="flash" data-flash-target="message">
    <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
    <p class="text-green-800 text-sm flex-1"><%= flash[:notice] %></p>
    <button data-action="click->flash#dismiss" class="text-green-600 hover:text-green-800">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded-lg flex items-center gap-3" data-controller="flash" data-flash-target="message">
    <svg class="w-5 h-5 text-red-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
    <p class="text-red-800 text-sm flex-1"><%= flash[:alert] %></p>
    <button data-action="click->flash#dismiss" class="text-red-600 hover:text-red-800">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
  </div>
<% end %>

<% if flash[:warning] %>
  <div class="mb-4 p-4 bg-yellow-50 border border-yellow-200 rounded-lg flex items-center gap-3" data-controller="flash" data-flash-target="message">
    <svg class="w-5 h-5 text-yellow-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
    </svg>
    <p class="text-yellow-800 text-sm flex-1"><%= flash[:warning] %></p>
    <button data-action="click->flash#dismiss" class="text-yellow-600 hover:text-yellow-800">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
  </div>
<% end %>
