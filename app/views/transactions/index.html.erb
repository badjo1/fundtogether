<!-- app/views/transactions/index.html.erb -->
<%= render layout: 'shared/app_layout' do %>
  <div class="space-y-6">
    <div class="flex items-center justify-between flex-wrap gap-4">
      <h2 class="text-2xl font-bold text-gray-900">Alle Transacties</h2>
      <div class="flex space-x-3">
        <%= link_to new_transaction_path(type: 'expense'), class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 flex items-center space-x-2" do %>
          <%= icon :plus, class: "w-4 h-4" %>
          <span>Nieuwe Uitgave</span>
        <% end %>
        <%= link_to new_transaction_path(type: 'deposit'), class: "bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 flex items-center space-x-2" do %>
          <%= icon :dollar, class: "w-4 h-4" %>
          <span>Nieuwe Storting</span>
        <% end %>
      </div>
    </div>

    <!-- Filters -->
    <%= form_with url: transactions_path, method: :get, local: true do |f| %>
      <div class="bg-white rounded-xl p-4 shadow-sm border border-gray-100">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Type</label>
            <%= f.select :type,
              [['Alle transacties', ''], ['Stortingen', 'deposit'], ['Uitgaven', 'expense']],
              { selected: params[:type] },
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
              onchange: "this.form.submit()"
            %>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Status</label>
            <%= f.select :status,
              [['Alle statussen', ''], ['Bevestigd', 'confirmed'], ['In behandeling', 'pending'], ['Mislukt', 'failed']],
              { selected: params[:status] },
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
              onchange: "this.form.submit()"
            %>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Token</label>
            <%= f.select :token,
              [['Alle tokens', ''], ['EURe', 'EURe'], ['DUMMY', 'DUMMY'], ['ETH', 'ETH']],
              { selected: params[:token] },
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
              onchange: "this.form.submit()"
            %>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Transactions List -->
    <% if @transactions.any? %>
      <div class="space-y-3">
        <% @transactions.each do |transaction| %>
          <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
            <div class="flex items-start justify-between gap-4">
              <div class="flex items-start gap-3 flex-1">
                <div class="p-2 rounded-lg <%= transaction.deposit? ? 'bg-green-100' : 'bg-red-100' %> flex-shrink-0">
                  <% if transaction.deposit? %>
                    <%= icon :plus, class: "w-5 h-5 text-green-600" %>
                  <% else %>
                    <%= icon :document, class: "w-5 h-5 text-red-600" %>
                  <% end %>
                </div>

                <div class="flex-1 min-w-0">
                  <h4 class="font-semibold text-gray-900"><%= transaction.description %></h4>
                  <p class="text-sm text-gray-500 mt-1">
                    <%= transaction.deposit? ? 'Gestort door' : 'Betaald door' %>
                    <%= transaction.from_user.name %> • <%= transaction.created_at.strftime("%Y-%m-%d %H:%M") %>
                  </p>

                  <% if transaction.expense? %>
                    <p class="text-xs text-gray-400 mt-1">
                      Gesplitst over <%= @account.active_members_count %> <%= @account.active_members_count == 1 ? 'lid' : 'leden' %>
                      (€<%= sprintf('%.2f', transaction.split_per_member / 100.0) %> per persoon)
                    </p>
                  <% end %>

                  <% if transaction.tx_hash.present? %>
                    <!-- Transaction Hash (read-only) -->
                    <div class="mt-2 flex items-center gap-2">
                      <span class="text-xs text-gray-400 font-mono"><%= transaction.tx_hash[0..9] %>...</span>
                      <a href="https://etherscan.io/tx/<%= transaction.tx_hash %>"
                         target="_blank"
                         class="text-xs text-blue-600 hover:text-blue-700">
                        Bekijk op Etherscan
                      </a>
                    </div>
                  <% end %>
                </div>
              </div>

              <div class="text-right flex-shrink-0">
                <p class="font-bold text-lg <%= transaction.deposit? ? 'text-green-600' : 'text-red-600' %>">
                  <%= transaction.deposit? ? '+' : '−' %>€<%= sprintf('%.2f', transaction.amount) %>
                </p>
                <p class="text-xs text-gray-500 mt-1"><%= transaction.token %></p>
                <span class="inline-block px-2 py-1 text-xs rounded-full mt-2 <%= status_badge_class(transaction.status) %> font-medium">
                  <%= transaction_status_text(transaction.status) %>
                </span>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="bg-white rounded-xl p-12 text-center shadow-sm border border-gray-100">
        <div class="p-4 rounded-full bg-gray-100 w-16 h-16 mx-auto mb-4 flex items-center justify-center">
          <%= icon :document, class: "w-8 h-8 text-gray-400" %>
        </div>
        <h3 class="text-lg font-bold text-gray-900 mb-2">Geen transacties gevonden</h3>
        <p class="text-gray-500 mb-6">
          <% if params[:type].present? || params[:status].present? || params[:token].present? %>
            Probeer de filters aan te passen
          <% else %>
            Begin met je eerste storting of uitgave
          <% end %>
        </p>
        <%= link_to new_transaction_path(type: 'deposit'), class: "inline-flex items-center gap-2 bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700" do %>
          <%= icon :plus, class: "w-4 h-4" %>
          <span>Nieuwe Transactie</span>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
