<%= render layout: 'shared/public_layout' do %>
  <div class="w-full max-w-md">
    <!-- Logo/Header -->
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-white rounded-full mb-4">
        <%= icon :lock, class: "w-8 h-8 text-blue-600" %>
      </div>
      <h1 class="text-3xl font-bold text-white mb-2">Nieuw Wachtwoord</h1>
      <p class="text-blue-200">Kies een sterk wachtwoord</p>
    </div>

    <!-- Reset Card -->
    <div class="bg-white rounded-2xl shadow-2xl p-8">
      <%= form_with url: password_path(params[:token]), method: :put, local: true, class: "space-y-6" do |form| %>
        <!-- New Password Field -->
        <div>
          <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
            Nieuw Wachtwoord
          </label>
          <input 
            type="password" 
            name="password" 
            id="password" 
            required 
            autofocus
            autocomplete="new-password"
            placeholder="Minimaal 8 karakters"
            maxlength="72"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
          >
          <p class="text-xs text-gray-500 mt-1">Minimaal 8 karakters</p>
        </div>

        <!-- Confirm Password Field -->
        <div>
          <label for="password_confirmation" class="block text-sm font-medium text-gray-700 mb-2">
            Bevestig Wachtwoord
          </label>
          <input 
            type="password" 
            name="password_confirmation" 
            id="password_confirmation" 
            required
            autocomplete="new-password"
            placeholder="Herhaal je wachtwoord"
            maxlength="72"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
          >
        </div>

        <%= render 'shared/button', text: 'Wachtwoord Opslaan', icon: :lock %>
      <% end %>

      <!-- Back to Login Link -->
      <div class="text-center mt-6">
        <p class="text-gray-600 text-sm">
          <%= link_to "â† Terug naar login", login_path, class: "text-blue-600 hover:text-blue-700 font-medium" %>
        </p>
      </div>
    </div>

    <!-- Additional Info -->
    <div class="mt-6 text-center text-blue-100 text-sm">
      <p>Na het opslaan word je uitgelogd op alle apparaten</p>
    </div>
  </div>
<% end %>
