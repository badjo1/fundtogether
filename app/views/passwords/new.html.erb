<%= render layout: 'shared/public_layout' do %>
  <div class="w-full max-w-md">
    <!-- Logo/Header -->
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-white rounded-full mb-4">
        <%= icon :key, class: "w-8 h-8 text-blue-600" %>
      </div>
      <h1 class="text-3xl font-bold text-white mb-2">Wachtwoord Vergeten?</h1>
      <p class="text-blue-200">Geen probleem, we sturen je een reset link</p>
    </div>

    <!-- Reset Card -->
    <div class="bg-white rounded-2xl shadow-2xl p-8">
      <%= form_with url: passwords_path, method: :post, local: true, class: "space-y-6" do |form| %>
        <!-- Email Field -->
        <div>
          <label for="email_address" class="block text-sm font-medium text-gray-700 mb-2">
            Email
          </label>
          <input 
            type="email" 
            name="email_address" 
            id="email_address" 
            required 
            autofocus
            autocomplete="email"
            placeholder="jouw@email.com"
            value="<%= params[:email_address] %>"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
          >
          <p class="text-xs text-gray-500 mt-2">
            Voer het e-mailadres in waarmee je bent geregistreerd
          </p>
        </div>

        <%= render 'shared/button', text: 'Verstuur Reset Link', icon: :mail %>
      <% end %>

      <!-- Divider -->
      <div class="relative my-6">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-gray-300"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-2 bg-white text-gray-500">Of</span>
        </div>
      </div>

      <!-- Back to Login Link -->
      <div class="text-center">
        <p class="text-gray-600 text-sm">
          Wachtwoord weer te binnen?
          <%= link_to "Terug naar login", login_path, class: "text-blue-600 hover:text-blue-700 font-medium" %>
        </p>
      </div>
    </div>

    <!-- Additional Info -->
    <div class="mt-6 text-center text-blue-100 text-sm">
      <p>De reset link is 15 minuten geldig</p>
    </div>
  </div>
<% end %>
