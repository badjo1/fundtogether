<!-- app/views/members/index.html.erb -->

<div class="min-h-screen bg-gray-50 flex" data-controller="dapp">
  <!-- Sidebar (same as other views) -->
  <aside class="fixed inset-y-0 left-0 z-50 w-64 bg-gray-900 transform -translate-x-full lg:translate-x-0 transition-transform duration-300 ease-in-out" data-dapp-target="sidebar">
    <div class="flex items-center justify-between h-16 px-4 bg-gray-800">
      <div class="flex items-center space-x-2">
        <svg class="w-8 h-8 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
        <h1 class="text-lg font-bold text-white">En/Of-Rekening</h1>
      </div>
      <button data-action="click->dapp#toggleSidebar" class="lg:hidden text-gray-400 hover:text-white">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    
    <nav class="mt-8 px-4 space-y-2">
      <%= link_to dashboard_path, class: "flex items-center space-x-3 w-full px-4 py-3 rounded-lg text-left transition-all duration-200 text-gray-300 hover:bg-gray-800 hover:text-white" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
        </svg>
        <span class="font-medium">Dashboard</span>
      <% end %>
      
      <%= link_to transactions_path, class: "flex items-center space-x-3 w-full px-4 py-3 rounded-lg text-left transition-all duration-200 text-gray-300 hover:bg-gray-800 hover:text-white" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <span class="font-medium">Transacties</span>
      <% end %>
      
      <%= link_to members_path, class: "flex items-center space-x-3 w-full px-4 py-3 rounded-lg text-left transition-all duration-200 bg-blue-600 text-white shadow-lg" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
        <span class="font-medium">Groepsleden</span>
      <% end %>
      
      <%= link_to settings_path, class: "flex items-center space-x-3 w-full px-4 py-3 rounded-lg text-left transition-all duration-200 text-gray-300 hover:bg-gray-800 hover:text-white" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <span class="font-medium">Instellingen</span>
      <% end %>
    </nav>

    <div class="absolute bottom-4 left-4 right-4">
      <div class="bg-gray-800 rounded-lg p-3">
        <p class="text-xs text-gray-400 mb-1">Verbonden als:</p>
        <p class="text-sm text-white font-medium truncate" data-dapp-target="walletAddress">Niet verbonden</p>
      </div>
      <button data-action="click->dapp#disconnectWallet" class="w-full mt-3 text-gray-400 hover:text-white text-sm flex items-center justify-center space-x-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
        </svg>
        <span>Uitloggen</span>
      </button>
    </div>
  </aside>

  <!-- Overlay -->
  <div data-dapp-target="overlay" data-action="click->dapp#toggleSidebar" class="hidden fixed inset-0 bg-black bg-opacity-50 z-40 lg:hidden"></div>

  <!-- Main Content -->
  <main class="flex-1 lg:ml-64">
    <!-- Top Bar -->
    <header class="bg-white shadow-sm border-b border-gray-200 h-16 flex items-center justify-between px-4 lg:px-8">
      <button data-action="click->dapp#toggleSidebar" class="lg:hidden text-gray-600 hover:text-gray-900">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
      
      <div class="flex items-center space-x-4 ml-auto">
        <div class="text-right">
          <p class="text-sm text-gray-600">Jouw Saldo</p>
          <p class="font-bold text-gray-900" data-dapp-target="userBalance">€150.25</p>
        </div>
        <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center">
          <span class="text-white font-bold text-sm">J</span>
        </div>
      </div>
    </header>

    <!-- Members Content -->
    <div class="p-4 lg:p-8">
      <div class="space-y-6">
        <div class="flex items-center justify-between flex-wrap gap-4">
          <h2 class="text-2xl font-bold text-gray-900">Groepsleden</h2>
          <button class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 flex items-center space-x-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            <span>Lid Uitnodigen</span>
          </button>
        </div>

        <!-- Group Stats -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-gray-600">Totaal Leden</p>
                <p class="text-3xl font-bold text-gray-900 mt-1">4</p>
              </div>
              <div class="p-3 rounded-lg bg-blue-100">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-gray-600">Gemiddeld Saldo</p>
                <p class="text-3xl font-bold text-gray-900 mt-1">€225.38</p>
              </div>
              <div class="p-3 rounded-lg bg-green-100">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-gray-600">Actieve Leden</p>
                <p class="text-3xl font-bold text-gray-900 mt-1">4</p>
              </div>
              <div class="p-3 rounded-lg bg-purple-100">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
          </div>
        </div>

        <!-- Members Grid -->
        <%
          members = [
            { name: 'Alice', wallet: '0x742d35Cc9c0532f3...', balance: 250.50, color: '#FF6B6B', joined: '2024-01-15', transactions: 23, role: 'Admin' },
            { name: 'Bob', wallet: '0x8ba1f109551bD432...', balance: 180.75, color: '#4ECDC4', joined: '2024-02-20', transactions: 18, role: 'Member' },
            { name: 'Charlie', wallet: '0x95aD61B0a150d079...', balance: 320.00, color: '#45B7D1', joined: '2024-03-10', transactions: 31, role: 'Member' },
            { name: 'Jij', wallet: '0x742d35Cc9c0532f3...', balance: 150.25, color: '#96CEB4', joined: '2024-04-05', transactions: 15, role: 'Member', current: true }
          ]
        %>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <% members.each do |member| %>
            <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
              <div class="flex items-start justify-between mb-4">
                <div class="flex items-center gap-3">
                  <div class="w-12 h-12 rounded-full flex items-center justify-center text-white font-bold text-lg" style="background-color: <%= member[:color] %>">
                    <%= member[:name][0] %>
                  </div>
                  <div>
                    <h3 class="font-semibold text-gray-900 text-lg">
                      <%= member[:name] %>
                      <% if member[:current] %>
                        <span class="text-sm font-normal text-gray-500">(Jij)</span>
                      <% end %>
                    </h3>
                    <p class="text-sm text-gray-500 font-mono"><%= member[:wallet] %></p>
                  </div>
                </div>
                <span class="px-2 py-1 text-xs rounded-full <%= member[:role] == 'Admin' ? 'bg-purple-100 text-purple-800' : 'bg-gray-100 text-gray-800' %> font-medium">
                  <%= member[:role] %>
                </span>
              </div>

              <div class="grid grid-cols-3 gap-4 pt-4 border-t border-gray-100">
                <div>
                  <p class="text-xs text-gray-500">Saldo</p>
                  <p class="text-lg font-bold text-gray-900">€<%= sprintf('%.2f', member[:balance]) %></p>
                </div>
                <div>
                  <p class="text-xs text-gray-500">Transacties</p>
                  <p class="text-lg font-bold text-gray-900"><%= member[:transactions] %></p>
                </div>
                <div>
                  <p class="text-xs text-gray-500">Lid sinds</p>
                  <p class="text-sm font-medium text-gray-900"><%= Date.parse(member[:joined]).strftime('%b %Y') %></p>
                </div>
              </div>

              <div class="flex gap-2 mt-4">
                <button class="flex-1 px-3 py-2 bg-blue-50 text-blue-600 rounded-lg hover:bg-blue-100 text-sm font-medium transition-colors">
                  Stuur Betaling
                </button>
                <button class="flex-1 px-3 py-2 bg-gray-50 text-gray-600 rounded-lg hover:bg-gray-100 text-sm font-medium transition-colors">
                  Bekijk Profiel
                </button>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Pending Invitations -->
        <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-bold text-gray-900">Uitstaande Uitnodigingen</h3>
            <span class="px-2 py-1 text-xs rounded-full bg-yellow-100 text-yellow-800 font-medium">2 In behandeling</span>
          </div>

          <div class="space-y-3">
            <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-gray-300 flex items-center justify-center">
                  <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
                <div>
                  <p class="font-medium text-gray-900">david@example.com</p>
                  <p class="text-sm text-gray-500">Uitgenodigd op 1 dec 2024</p>
                </div>
              </div>
              <button class="px-3 py-1 text-sm text-red-600 hover:text-red-700 font-medium">
                Annuleren
              </button>
            </div>

            <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-gray-300 flex items-center justify-center">
                  <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
                <div>
                  <p class="font-medium text-gray-900">emma@example.com</p>
                  <p class="text-sm text-gray-500">Uitgenodigd op 28 nov 2024</p>
                </div>
              </div>
              <button class="px-3 py-1 text-sm text-red-600 hover:text-red-700 font-medium">
                Annuleren
              </button>
            </div>
          </div>
        </div>

        <!-- Activity Overview -->
        <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Recente Activiteit</h3>
          <div class="space-y-3">
            <div class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg">
              <div class="w-8 h-8 rounded-full flex items-center justify-center text-white font-bold" style="background-color: #4ECDC4">B</div>
              <div class="flex-1">
                <p class="text-sm text-gray-900"><span class="font-medium">Bob</span> heeft een betaling gedaan</p>
                <p class="text-xs text-gray-500">2 uur geleden</p>
              </div>
            </div>
            <div class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg">
              <div class="w-8 h-8 rounded-full flex items-center justify-center text-white font-bold" style="background-color: #FF6B6B">A</div>
              <div class="flex-1">
                <p class="text-sm text-gray-900"><span class="font-medium">Alice</span> heeft €45.50 gestort</p>
                <p class="text-xs text-gray-500">5 uur geleden</p>
              </div>
            </div>
            <div class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg">
              <div class="w-8 h-8 rounded-full flex items-center justify-center text-white font-bold" style="background-color: #96CEB4">J</div>
              <div class="flex-1">
                <p class="text-sm text-gray-900"><span class="font-medium">Jij</span> bent toegevoegd aan de groep</p>
                <p class="text-xs text-gray-500">1 dag geleden</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>

