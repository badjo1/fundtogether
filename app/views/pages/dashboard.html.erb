<!-- app/views/pages/dashboard.html.erb -->
<div class="min-h-screen bg-gray-50 flex" data-controller="dapp">
  <!-- Sidebar -->
  <aside class="fixed inset-y-0 left-0 z-50 w-64 bg-gray-900 transform -translate-x-full lg:translate-x-0 transition-transform duration-300 ease-in-out" data-dapp-target="sidebar">
    <div class="flex items-center justify-between h-16 px-4 bg-gray-800">
      <div class="flex items-center space-x-2">
        <svg class="w-8 h-8 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        </svg>
        <h1 class="text-lg font-bold text-white">Fund Together</h1>
      </div>
      <button data-action="click->dapp#toggleSidebar" class="lg:hidden text-gray-400 hover:text-white">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    
    <nav class="mt-8 px-4 space-y-2">
      <%= link_to dashboard_path, class: "flex items-center space-x-3 w-full px-4 py-3 rounded-lg text-left transition-all duration-200 bg-blue-600 text-white shadow-lg" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
        </svg>
        <span class="font-medium">Dashboard</span>
      <% end %>
      
      <%= link_to transactions_path, class: "flex items-center space-x-3 w-full px-4 py-3 rounded-lg text-left transition-all duration-200 text-gray-300 hover:bg-gray-800 hover:text-white" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <span class="font-medium">Transacties</span>
      <% end %>
      
      <%= link_to members_path, class: "flex items-center space-x-3 w-full px-4 py-3 rounded-lg text-left transition-all duration-200 text-gray-300 hover:bg-gray-800 hover:text-white" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
        <span class="font-medium">Groepsleden</span>
      <% end %>
      
      <%= link_to settings_path, class: "flex items-center space-x-3 w-full px-4 py-3 rounded-lg text-left transition-all duration-200 text-gray-300 hover:bg-gray-800 hover:text-white" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <span class="font-medium">Instellingen</span>
      <% end %>
    </nav>

    <div class="absolute bottom-4 left-4 right-4">
      <div class="bg-gray-800 rounded-lg p-3">
        <p class="text-xs text-gray-400 mb-1">Verbonden als:</p>
        <p class="text-sm text-white font-medium truncate" data-dapp-target="walletAddress">Niet verbonden</p>
      </div>
      <button data-action="click->dapp#disconnectWallet" class="w-full mt-3 text-gray-400 hover:text-white text-sm flex items-center justify-center space-x-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
        </svg>
        <span>Uitloggen</span>
      </button>
    </div>
  </aside>

  <!-- Overlay voor mobiel -->
  <div data-dapp-target="overlay" data-action="click->dapp#toggleSidebar" class="hidden fixed inset-0 bg-black bg-opacity-50 z-40 lg:hidden"></div>

  <!-- Main Content -->
  <main class="flex-1 lg:ml-64">
    <!-- Top Bar -->
    <header class="bg-white shadow-sm border-b border-gray-200 h-16 flex items-center justify-between px-4 lg:px-8">
      <button data-action="click->dapp#toggleSidebar" class="lg:hidden text-gray-600 hover:text-gray-900">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
      
      <div class="flex items-center space-x-4 ml-auto">
        <div class="text-right">
          <p class="text-sm text-gray-600">Jouw Saldo</p>
          <p class="font-bold text-gray-900" data-dapp-target="userBalance">€0.00</p>
        </div>
        <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center">
          <span class="text-white font-bold text-sm">U</span>
        </div>
      </div>
    </header>

    <!-- Dashboard Content -->
    <div class="p-4 lg:p-8">
      <div class="space-y-6">
        <div class="flex items-center justify-between flex-wrap gap-4">
          <h2 class="text-2xl font-bold text-gray-900">Dashboard</h2>
          <div class="flex space-x-3">
            <button class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 flex items-center space-x-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
              <span>Uitgave</span>
            </button>
            <button class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 flex items-center space-x-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"></path>
              </svg>
              <span>Storting</span>
            </button>
          </div>
        </div>

        <!-- Stats Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-gray-600">Totaal Groepssaldo</p>
                <p class="text-2xl font-bold text-gray-900 mt-1">€901.50</p>
                <p class="text-sm text-gray-500 mt-1">Alle leden gecombineerd</p>
              </div>
              <div class="p-3 rounded-lg bg-blue-100">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-gray-600">Jouw Saldo</p>
                <p class="text-2xl font-bold text-gray-900 mt-1">€150.25</p>
                <p class="text-sm text-gray-500 mt-1">Individueel saldo</p>
              </div>
              <div class="p-3 rounded-lg bg-green-100">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                </svg>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-gray-600">Groepsleden</p>
                <p class="text-2xl font-bold text-gray-900 mt-1">4</p>
                <p class="text-sm text-gray-500 mt-1">Actieve deelnemers</p>
              </div>
              <div class="p-3 rounded-lg bg-purple-100">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-gray-600">Deze Maand</p>
                <p class="text-2xl font-bold text-gray-900 mt-1">€485.75</p>
                <p class="text-sm text-gray-500 mt-1">Totale uitgaven</p>
              </div>
              <div class="p-3 rounded-lg bg-red-100">
                <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                </svg>
              </div>
            </div>
          </div>
        </div>

        <!-- Recente Transacties -->
        <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Recente Transacties</h3>
          <div class="space-y-3">
            <!-- Transaction items zouden hier dynamisch geladen worden -->
            <div class="bg-white rounded-lg p-4 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-3">
                  <div class="p-2 rounded-lg bg-green-100">
                    <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                  </div>
                  <div>
                    <p class="font-medium text-gray-900">Initial deposit</p>
                    <p class="text-sm text-gray-500">Gestort door Jij • <%= Time.now.strftime("%Y-%m-%d %H:%M") %></p>
                  </div>
                </div>
                <div class="text-right">
                  <p class="font-bold text-green-600">+€100</p>
                  <p class="text-xs text-gray-500">EURe</p>
                  <span class="inline-block px-2 py-1 text-xs rounded-full mt-1 bg-green-100 text-green-800">Bevestigd</span>
                </div>
              </div>
            </div>
          </div>
          <%= link_to "Alle transacties bekijken →", transactions_path, class: "w-full mt-4 text-center text-blue-600 hover:text-blue-700 font-medium py-2 block" %>
        </div>
      </div>
    </div>
  </main>
</div>