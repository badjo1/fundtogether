<!-- app/views/members/index.html.erb -->
    <%= render layout: 'shared/app_layout' do %>
      <div class="space-y-6">
        <div class="flex items-center justify-between flex-wrap gap-4">
          <h2 class="text-2xl font-bold text-gray-900">Groepsleden</h2>
          <%= button_to invitations_path, method: :post, class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 flex items-center space-x-2" do %>
            <%= icon :plus, class: "w-4 h-4" %>
            <span>Lid Uitnodigen</span>
          <% end %>
        </div>

        <!-- Group Stats -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-gray-600">Totaal Leden</p>
                <p class="text-3xl font-bold text-gray-900 mt-1"><%= @total_members %></p>
              </div>
              <div class="p-3 rounded-lg bg-blue-100">
                <%= icon :users, class: "w-6 h-6 text-blue-600" %>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-gray-600">Gemiddeld Saldo</p>
                <p class="text-3xl font-bold text-gray-900 mt-1">€<%= sprintf('%.2f', @average_balance) %></p>
              </div>
              <div class="p-3 rounded-lg bg-green-100">
                <%= icon :dollar, class: "w-6 h-6 text-green-600" %>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-gray-600">Actieve Leden</p>
                <p class="text-3xl font-bold text-gray-900 mt-1"><%= @active_members %></p>
              </div>
              <div class="p-3 rounded-lg bg-purple-100">
                <%= icon :check_circle, class: "w-6 h-6 text-purple-600" %>
              </div>
            </div>
          </div>
        </div>

        <!-- Members Grid -->
        <%
          # Generate consistent colors for user avatars
          avatar_colors = ['#FF6B6B', '#4ECDC4', '#45B7D1', '#96CEB4', '#FFA07A', '#98D8C8', '#6C5CE7', '#FDA7DF']
        %>

        <% if @users.any? %>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <% @users.each_with_index do |user, index| %>
              <% membership = user.account_memberships.find_by(account: @account) %>
              <% next unless membership %>
              <% user_transactions_count = @account.transactions.where(from_user: user).count %>
              <% avatar_color = avatar_colors[index % avatar_colors.length] %>

              <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
                <div class="flex items-start justify-between mb-4">
                  <div class="flex items-center gap-3">
                    <div class="w-12 h-12 rounded-full flex items-center justify-center text-white font-bold text-lg" style="background-color: <%= avatar_color %>">
                      <%= user.name[0].upcase %>
                    </div>
                    <div>
                      <h3 class="font-semibold text-gray-900 text-lg">
                        <%= user.name %>
                        <% if user == current_user %>
                          <span class="text-sm font-normal text-gray-500">(Jij)</span>
                        <% end %>
                      </h3>
                      <p class="text-sm text-gray-500"><%= user.email_address %></p>
                    </div>
                  </div>
                  <span class="px-2 py-1 text-xs rounded-full <%= membership.admin? ? 'bg-purple-100 text-purple-800' : 'bg-gray-100 text-gray-800' %> font-medium">
                    <%= membership.admin? ? 'Admin' : 'Lid' %>
                  </span>
                </div>

                <div class="grid grid-cols-3 gap-4 pt-4 border-t border-gray-100">
                  <div>
                    <p class="text-xs text-gray-500">Saldo</p>
                    <p class="text-lg font-bold <%= membership.balance_cents >= 0 ? 'text-gray-900' : 'text-red-600' %>">
                      €<%= sprintf('%.2f', membership.balance_euros) %>
                    </p>
                  </div>
                  <div>
                    <p class="text-xs text-gray-500">Transacties</p>
                    <p class="text-lg font-bold text-gray-900"><%= user_transactions_count %></p>
                  </div>
                  <div>
                    <p class="text-xs text-gray-500">Lid sinds</p>
                    <p class="text-sm font-medium text-gray-900">
                      <%= membership.joined_at&.strftime('%b %Y') || membership.created_at.strftime('%b %Y') %>
                    </p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="bg-white rounded-xl p-8 shadow-sm border border-gray-100 text-center">
            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <%= icon :users, class: "w-8 h-8 text-gray-400" %>
            </div>
            <p class="text-gray-500 mb-4">Nog geen leden in dit account</p>
            <%= button_to invitations_path, method: :post, class: "px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-medium inline-flex items-center gap-2" do %>
              <%= icon :plus, class: "w-5 h-5" %>
              <span>Lid Uitnodigen</span>
            <% end %>
          </div>
        <% end %>

        <!-- Pending Invitations -->
        <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-bold text-gray-900">Uitstaande Uitnodigingen</h3>
            <span class="px-2 py-1 text-xs rounded-full bg-yellow-100 text-yellow-800 font-medium">
              <%= @pending_invitations.count %> In behandeling
            </span>
          </div>

          <% if @pending_invitations.any? %>
            <div class="space-y-3">
              <% @pending_invitations.each do |invitation| %>
                <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                  <div class="flex items-center gap-3 flex-1">
                    <div class="w-10 h-10 rounded-full bg-gray-300 flex items-center justify-center">
                      <%= icon :user, class: "w-5 h-5 text-gray-600" %>
                    </div>
                    <div class="flex-1">
                      <p class="font-medium text-gray-900"><%= invitation.email %></p>
                      <p class="text-sm text-gray-500">
                        Uitgenodigd op <%= invitation.created_at.strftime('%d %b %Y om %H:%M') %>
                      </p>
                      <% if invitation.time_remaining > 0 %>
                        <p class="text-xs text-yellow-600 mt-1">
                          <%= icon :warning, class: "w-3 h-3 inline" %>
                          Verloopt over <%= distance_of_time_in_words(invitation.time_remaining) %>
                        </p>
                      <% end %>
                    </div>
                  </div>
                  <%= button_to invitation_path(invitation),
                      method: :delete,
                      class: "px-3 py-1 text-sm text-red-600 hover:text-red-700 font-medium",
                      data: { turbo_confirm: "Weet je zeker dat je deze uitnodiging wilt annuleren?" } do %>
                    Annuleren
                  <% end %>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-8">
              <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <%= icon :user, class: "w-8 h-8 text-gray-400" %>
              </div>
              <p class="text-gray-500 mb-4">Geen uitstaande uitnodigingen</p>
              <%= button_to invitations_path, method: :post, class: "px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-medium inline-flex items-center gap-2" do %>
                <%= icon :plus, class: "w-5 h-5" %>
                <span>Lid Uitnodigen</span>
              <% end %>
            </div>
          <% end %>
        </div>

      </div>
    <% end %>
